{
  "manifest_version": 3,
  "name": "Iunami.AI",
  "version": "1.0.0",
  "description": "Supercharge your Notion workflow with high-speed AI voice and text parsing powered by Iunami.AI.",
  "icons": {
    "16": "/iunami-simple.png",
    "32": "/iunami-simple.png",
    "48": "/iunami-simple.png",
    "128": "/iunami-simple.png"
  },
  "permissions": [
    "storage", 
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.notion.com/*"
  ],
  "action": {
    "default_title": "Open Iunami"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}