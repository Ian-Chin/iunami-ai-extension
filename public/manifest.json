{
  "manifest_version": 3,
  "name": "Iunami.AI",
  "version": "1.0.0",
  "description": "Voice-powered Notion calendar assistant",
  "permissions": [
    "storage", 
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.notion.com/*"
  ],
  "action": {
    "default_title": "Open Iunami"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}